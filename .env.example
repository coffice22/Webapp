# ============================================
# CONFIGURATION FRONTEND - COFFICE
# ============================================
# Ce fichier configure le frontend React/Vite

# URL de l'API Backend PHP/MySQL
# Production : https://test.coffice.dz/api
# Developpement local : http://localhost/api
VITE_API_URL=https://test.coffice.dz/api

# ============================================
# CONFIGURATION BASE DE DONNEES MYSQL
# ============================================
# Ces variables sont utilisees par le backend PHP dans /api

# Informations de connexion MySQL cPanel
DB_HOST=localhost
DB_PORT=3306
DB_NAME=cofficed_coffice
DB_USER=cofficed_user
DB_PASSWORD=VOTRE_MOT_DE_PASSE_ICI
DB_CHARSET=utf8mb4

# URL de l'application
APP_URL=https://test.coffice.dz
APP_ENV=production

# Securite JWT (GENERER UNE CLE ALEATOIRE: openssl rand -base64 64)
JWT_SECRET=GENERER_UNE_CLE_SECRETE_ALEATOIRE

# Stockage
UPLOAD_MAX_SIZE=5242880
UPLOAD_DIR=uploads

# Securite
RATE_LIMIT_MAX_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1
SESSION_LIFETIME=10080
PASSWORD_MIN_LENGTH=6
