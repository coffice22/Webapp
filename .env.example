# ============================================
# CONFIGURATION FRONTEND - COFFICE
# ============================================

# URL de l'API Backend PHP/MySQL
# PRODUCTION: https://coffice.dz/api (ou votre domaine)
# DEV LOCAL: http://localhost/api (ou votre serveur local)
VITE_API_URL=https://coffice.dz/api

# ============================================
# CONFIGURATION BASE DE DONNEES MYSQL
# ============================================

DB_HOST=localhost
DB_PORT=3306
DB_NAME=cofficed_coffice
DB_USER=votre_user_mysql
DB_PASSWORD=votre_password_mysql_securise
DB_CHARSET=utf8mb4

# ============================================
# APPLICATION
# ============================================

# URL de l'application
APP_URL=https://coffice.dz
APP_ENV=production
APP_MODE=production

# ============================================
# SECURITE JWT
# ============================================

# Générer avec: openssl rand -base64 64
# IMPORTANT: Changer en production !
JWT_SECRET=votre_secret_jwt_minimum_32_caracteres_aleatoires

# ============================================
# STOCKAGE
# ============================================

UPLOAD_MAX_SIZE=5242880
UPLOAD_DIR=uploads

# ============================================
# SECURITE
# ============================================

RATE_LIMIT_MAX_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1
SESSION_LIFETIME=10080
PASSWORD_MIN_LENGTH=8

# ============================================
# CONFIGURATION EMAIL (SMTP)
# ============================================

MAIL_MAILER=smtp

# Gmail (Recommandé)
# 1. Activer l'authentification à 2 facteurs
# 2. Créer un mot de passe d'application: https://myaccount.google.com/apppasswords
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=votre_email@gmail.com
MAIL_PASSWORD=votre_mot_de_passe_application
MAIL_ENCRYPTION=tls

# SMTP personnalisé (Alternative)
# MAIL_HOST=mail.votre-domaine.com
# MAIL_PORT=465
# MAIL_USERNAME=noreply@votre-domaine.com
# MAIL_PASSWORD=votre_password
# MAIL_ENCRYPTION=ssl

MAIL_FROM_ADDRESS=noreply@coffice.dz
MAIL_FROM_NAME=Coffice
